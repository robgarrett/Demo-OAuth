@{
    ViewData["Title"] = "Home Page";
    //ViewBag.Response = "{a:1, 'b':'foo', c:[false,'false',null, 'null', {d:{e:1.3e5,f:'1.3e5'}}]};";
}

<div class="jumbotron">
    <h1>Demo-CoreMVC-OAUTH</h1>
    <p class="lead">Demonstration of OAUTH process from ASP.NET Core MVC.</p>
</div>

@using (Html.BeginForm("ProcessForm", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4">
            <h2>Azure</h2>
            <p><input type="submit" name="submit" value="Azure" class="btn btn-light"/></p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" id="json">
            
        </div>
    </div>
}

<script type="text/javascript">
    var json = @Html.Raw(@ViewBag.Response);
    output("json", syntaxHighlight(json));
</script>